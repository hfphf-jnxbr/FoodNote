<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- My Color -->
        <item name="strokeColorCard">#E4E4E4</item>
        <item name="clearWhite">#FFFFFF</item>
        <item name="strokeColorCardConstructor">#E37777</item>
        <item name="textColorLightGray">#B3B3B3</item>
        <item name="textColorLightGray2">#CCCCCC</item>
        <item name="buttonCreateConstructor">#79DDC6</item>

        <item name="backgroundNoteBook">#F8F8F8</item>
        <item name="myGray">#979595</item>

        <item name="colorCardGreen">#E9FBD6</item>
        <item name="colorCardPink">#FBE6E6</item>
        <item name="colorCardYellow">#FAF4C4</item>
        <item name="colorCardWhite">#FFFFFF</item>
        <item name="colorCardGray">#EFEFEF</item>
        <item name="colorCardBlue">#D7EEFA</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/black</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>